# Runtime configuration
FLASK_ENV=development
APP_CONFIG=development
FLASK_DEBUG=1

# Core secrets and database settings
SECRET_KEY=change-me
DATABASE_URL=sqlite:///instance/scaffold.db
# DATABASE_URL=postgresql+psycopg://scaffold:scaffold@postgres:5432/scaffold
# DATABASE_URL=mysql+pymysql://scaffold:scaffold@mariadb:3306/scaffold
SCAFFOLD_APP_MODULES=scaffold.apps.auth.routes,scaffold.apps.admin,scaffold.apps.bia,scaffold.apps.csa,scaffold.apps.template
PORT=8000

# Session security defaults
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Audit logging (structured JSON events + retention)
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=./instance/logs/audit.log
AUDIT_LOG_RETENTION_DAYS=30
AUDIT_LOG_PRUNE_INTERVAL_HOURS=24
# AUDIT_LOG_MODEL_EVENTS={"scaffold.apps.identity.models.User": {"fields": ["email", "status"]}}

# Multi-factor authentication issuer
MFA_ISSUER_NAME=Assessment App

# BIA application bootstrap
DATABASE_TYPE=sqlite

# MariaDB credentials (used when DATABASE_TYPE=mariadb)
DB_USER=
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306
DB_NAME=scaffold

# Optional Flask run parameters
# FLASK_RUN_HOST=0.0.0.0
# FLASK_RUN_PORT=5000
