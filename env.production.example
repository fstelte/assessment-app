# Copy to ../.env.production and adjust per environment
FLASK_ENV=production
SECRET_KEY=replace-me
# DATABASE_URL=postgresql+psycopg://scaffold:scaffold@postgres:5432/scaffold
DATABASE_URL=mysql+pymysql://${MARIADB_USER}:${MARIADB_PASSWORD}@mariadb:3306/${MARIADB_DATABASE}
SCAFFOLD_APP_MODULES=scaffold.apps.auth.routes,scaffold.apps.admin,scaffold.apps.bia,scaffold.apps.csa,scaffold.apps.template
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PORT=8000

# Postgres defaults (used when running with `--profile postgres`)
POSTGRES_DB=scaffold
POSTGRES_USER=scaffold
POSTGRES_PASSWORD=scaffold

# MariaDB defaults (used when running with `--profile mariadb`)
MARIADB_DATABASE=scaffold
MARIADB_USER=scaffold
MARIADB_PASSWORD=scaffold
MARIADB_ROOT_PASSWORD=root

